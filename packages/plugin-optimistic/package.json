{
  "name": "@spoosh/plugin-optimistic",
  "version": "0.6.1",
  "description": "Optimistic updates plugin for Spoosh - instant UI updates with automatic rollback",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spooshdev/spoosh.git",
    "directory": "packages/plugin-optimistic"
  },
  "bugs": {
    "url": "https://github.com/spooshdev/spoosh/issues"
  },
  "homepage": "https://spoosh.dev/docs/react/plugins/optimistic",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "spoosh",
    "plugin",
    "optimistic",
    "api-client",
    "mutations"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "peerDependencies": {
    "@spoosh/core": ">=0.14.2",
    "@spoosh/plugin-invalidation": ">=0.7.0"
  },
  "devDependencies": {
    "@spoosh/core": "workspace:*",
    "@spoosh/plugin-invalidation": "workspace:*",
    "@spoosh/test-utils": "workspace:*"
  }
}
