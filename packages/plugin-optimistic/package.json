{
  "name": "@spoosh/plugin-optimistic",
  "version": "0.1.0",
  "description": "Optimistic updates plugin for Spoosh - instant UI updates with automatic rollback",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nxnom/spoosh.git",
    "directory": "packages/plugin-optimistic"
  },
  "bugs": { "url": "https://github.com/nxnom/spoosh/issues" },
  "homepage": "https://github.com/nxnom/spoosh/tree/main/packages/plugin-optimistic#readme",
  "keywords": ["spoosh", "plugin", "optimistic", "api-client", "mutations"],
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build && npm run typecheck && npm run lint"
  },
  "peerDependencies": {
    "@spoosh/core": ">=0.1.0",
    "@spoosh/plugin-invalidation": ">=0.1.0"
  },
  "devDependencies": {
    "@spoosh/core": "workspace:*",
    "@spoosh/plugin-invalidation": "workspace:*"
  }
}
