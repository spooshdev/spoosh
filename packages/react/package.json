{
  "name": "@spoosh/react",
  "version": "0.10.0",
  "license": "MIT",
  "description": "React hooks for Spoosh API toolkit",
  "keywords": [
    "spoosh",
    "react",
    "hooks",
    "api-toolkit",
    "useRead",
    "useWrite"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spooshdev/spoosh.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/spooshdev/spoosh/issues"
  },
  "homepage": "https://spoosh.dev/docs/react",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "peerDependencies": {
    "@spoosh/core": ">=0.13.1",
    "react": "^18 || ^19"
  },
  "devDependencies": {
    "@spoosh/core": "workspace:*",
    "@spoosh/test-utils": "workspace:*",
    "@testing-library/react": "^16.0.0",
    "jsdom": "^26.0.0"
  }
}
