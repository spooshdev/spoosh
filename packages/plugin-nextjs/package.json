{
  "name": "@spoosh/plugin-nextjs",
  "version": "0.1.0",
  "description": "Next.js integration plugin for Spoosh - server revalidation after mutations",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nxnom/spoosh.git",
    "directory": "packages/plugin-nextjs"
  },
  "bugs": {
    "url": "https://github.com/nxnom/spoosh/issues"
  },
  "homepage": "https://github.com/nxnom/spoosh/tree/main/packages/plugin-nextjs#readme",
  "keywords": ["spoosh", "plugin", "nextjs", "next.js", "revalidation", "api-client"],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build && npm run typecheck && npm run lint"
  },
  "peerDependencies": {
    "@spoosh/core": ">=0.1.0",
    "next": ">=13.0.0"
  },
  "devDependencies": {
    "@spoosh/core": "workspace:*"
  }
}
