{
  "name": "@spoosh/openapi",
  "version": "0.1.0",
  "license": "MIT",
  "description": "OpenAPI schema generator for Spoosh API definitions",
  "keywords": ["spoosh", "openapi", "swagger", "schema", "api", "typescript"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nxnom/spoosh.git",
    "directory": "packages/openapi"
  },
  "bugs": {
    "url": "https://github.com/nxnom/spoosh/issues"
  },
  "homepage": "https://spoosh.dev/docs/integrations/openapi",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "spoosh-openapi": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build && npm run typecheck && npm run lint"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/node": "^22.19.2"
  }
}
