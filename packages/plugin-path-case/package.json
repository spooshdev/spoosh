{
  "name": "@spoosh/plugin-path-case",
  "version": "0.1.0",
  "description": "Path case transformation plugin for Spoosh - enables camelCase API paths with automatic conversion to kebab-case, snake_case, etc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nxnom/spoosh.git",
    "directory": "packages/plugin-path-case"
  },
  "bugs": {
    "url": "https://github.com/nxnom/spoosh/issues"
  },
  "homepage": "https://spoosh.dev/docs/plugins/path-case",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "spoosh",
    "plugin",
    "path-case",
    "case-conversion",
    "kebab-case",
    "snake-case",
    "camel-case",
    "api-client"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "peerDependencies": {
    "@spoosh/core": ">=0.4.1"
  },
  "devDependencies": {
    "@spoosh/core": "workspace:*",
    "@spoosh/test-utils": "workspace:*"
  }
}
