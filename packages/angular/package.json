{
  "name": "@spoosh/angular",
  "version": "0.10.0",
  "license": "MIT",
  "description": "Angular signals integration for Spoosh API toolkit",
  "keywords": [
    "spoosh",
    "angular",
    "signals",
    "api-toolkit",
    "injectRead",
    "injectWrite"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spooshdev/spoosh.git",
    "directory": "packages/angular"
  },
  "bugs": {
    "url": "https://github.com/spooshdev/spoosh/issues"
  },
  "homepage": "https://spoosh.dev/docs/angular",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "peerDependencies": {
    "@spoosh/core": ">=0.14.2",
    "@angular/core": ">=16.0.0"
  },
  "devDependencies": {
    "@angular/core": "^21.1.0",
    "@spoosh/core": "workspace:*",
    "@spoosh/test-utils": "workspace:*"
  }
}
