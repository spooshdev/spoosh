{
  "name": "@spoosh/hono",
  "version": "0.3.0",
  "license": "MIT",
  "description": "Hono server adapter for Spoosh API definitions",
  "keywords": [
    "spoosh",
    "hono",
    "server",
    "api",
    "adapter",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nxnom/spoosh.git",
    "directory": "packages/hono"
  },
  "bugs": {
    "url": "https://github.com/nxnom/spoosh/issues"
  },
  "homepage": "https://spoosh.dev/react/docs/integrations/hono",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "peerDependencies": {
    "@spoosh/core": ">=0.6.0",
    "hono": ">=4.0.0"
  },
  "devDependencies": {
    "@spoosh/core": "workspace:*",
    "hono": "^4.10.6"
  }
}
