{
  "name": "spoosh-monorepo",
  "private": true,
  "license": "MIT",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:docs": "pnpm --filter @spoosh/docs dev",
    "build:docs": "pnpm --filter @spoosh/docs build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "changeset": "changeset",
    "bump": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.1.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/expect": "^4.0.17",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.17"
  }
}
